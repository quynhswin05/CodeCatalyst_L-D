def convertToBase13(num):
    if num == 0:
        return "0"

    base13_digits = "0123456789ABC"  
    digits = ""
    negative = num < 0
    num = abs(num) 

    while num > 0:
        remainder = num % 13
        digit = base13_digits[remainder]
        digits = digit + digits  
        num //= 13
    
    
    if negative: 
      return "-" + digits 
    else: 
      return digits 

print(convertToBase13(49)) 
